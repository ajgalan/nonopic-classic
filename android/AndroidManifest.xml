<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.adrianjg.nonopic"
    android:versionCode="1"
    android:versionName="1.0"
    android:installLocation="auto">

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/GdxTheme">
        <activity
            android:name=".AndroidLauncher"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Onboarding">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LevelSelectorActivity"
            android:theme="@style/AppTheme.LevelSelector"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AcercaDeActivity"
            android:label="@string/title_activity_acerca_de"
            android:theme="@style/AppTheme.LevelSelector"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".InstruccionesActivity"
            android:label="@string/title_activity_instrucciones"
            android:theme="@style/AppTheme.LevelSelector"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>