<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
  <uses-feature android:glEsVersion="0x00020000" android:required="true"/>
    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/GdxTheme">
        <activity
            android:name="es.adrianjg.nonopic.android.AndroidLauncher"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="es.adrianjg.nonopic.android.MainActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Onboarding"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="es.adrianjg.nonopic.android.LevelSelectorActivity"
            android:theme="@style/AppTheme.LevelSelector"
            android:screenOrientation="portrait" />
        <activity
            android:name="es.adrianjg.nonopic.android.AcercaDeActivity"
            android:label="@string/title_activity_acerca_de"
            android:theme="@style/AppTheme.LevelSelector"
            android:screenOrientation="portrait"/>
        <activity
            android:name="es.adrianjg.nonopic.android.InstruccionesActivity"
            android:label="@string/title_activity_instrucciones"
            android:theme="@style/AppTheme.LevelSelector"
            android:screenOrientation="portrait">
        </activity>
    </application>


</manifest>
